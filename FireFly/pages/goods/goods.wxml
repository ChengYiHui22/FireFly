<!--pages/goods/goods.wxml-->
<import src="../../wxParse/wxParse.wxml"></import>
<!-- 详情页面 -->
<view class="goods">
<!-- 图片 -->
<view class="goods-img">
  <swiper
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
    circular="{{circular}}"
    indicator-color="#fff"
    indicator-active-color="#000"
    class="goods-swiper"
    bindchange="swiperChange"
  >
    <block wx:for="{{image}}" wx:key='image_id'>
      <swiper-item>
        <image src="{{item.file_path}}" class="slide-image" mode="aspectFill" />
      </swiper-item>
    </block>
  </swiper>
  <!-- 显示当前第几张 -->
  <view class="img-index">
    {{current+1}}/<text class="img-count"> {{image.length}} </text>

  </view>

</view>

<!-- 商品介绍 -->
<view class="goods-info">
  <!-- 标题 -->
  <view class="goods-title">{{dataObj.goods_name}}</view>
  <!-- 价格 -->
  <view class="goods-price">
    <text class="now-price">￥{{dataObj.spec[0].goods_price}}</text>
    <text class="old-price">￥{{dataObj.spec[0].line_price}}</text>

  </view>
  <!-- 销量 -->
  <view class="goods-count">
    <text>销量:{{dataObj.spec[0].goods_sales}}</text>
    <text>库存:{{dataObj.spec[0].stock_num}}</text>
  </view>

</view>
<!-- 已选 -->
<view class="select-goods">
  <van-collapse value="{{ activeNames }}" bind:change="onChange">
  <van-collapse-item title="已选 1个" name="1">
   <view >
     <view class="buy-count">购买数量</view>
    <view class="select-goods-item">  
      <van-button icon="minus" size="small" bindtap="downCount" />
       <text class="select-num">{{value}}</text>
    <van-button icon="plus" size="small" bindtap="onCount"/>
    </view>
   </view>
  </van-collapse-item>
</van-collapse>
</view>
<!-- 商品描述 -->
<view class="describe">
<view class="describe-title">商品描述</view>
<view>
  <template is="wxParse" data="{{wxParseData:content.nodes}}"></template>

</view>
</view>
<!-- 跳转到bar -->


 <!-- 回到顶部 -->
 <view class="tap" wx:if="{{top==1}}" bindtap="goTop">
        <van-icon name="upgrade" size="70rpx" color="#999" />
    </view>

<!-- 导航蓝 -->
    <van-goods-action>
  <van-goods-action-icon icon="service-o" text="客服"  />
  <van-goods-action-icon icon="cart-o" text="购物车" />
  <van-goods-action-button color=" #f4a213" text="加入购物车"  />
  <van-goods-action-button color="#ff495e" text="立即购买"  />
</van-goods-action>

<view class="menu">
  <!--主菜单 -->
  <view class="main icon {{show? 'active':null}}" bindtap="showIcon" >
    <van-icon name="apps-o" size="40rpx" color="#fff"/>
  </view>
 
  <van-transition show="{{ show }}"  name="fade-up"  duration="{{ { enter: 300, leave: 1000 } }}">
    <view class="menu-classify">
      <!-- 首页 -->
      <view class="first icon " bindtap="goToBar" data-title="../First/first">

    <van-icon name="wap-home-o" size="40rpx" color="#fff" />
    </view>
    <!-- 分类 -->
    <view class="classify icon"  bindtap="goToBar" data-title="../classfiy/classify">
    <van-icon name="qr"  size="40rpx" color="#fff"  />
    </view>
    <!--购物车 -->
    <view class="cart icon"  bindtap="goToBar" data-title="../Cart/Cart">
    <van-icon name="cart-o" size="40rpx" color="#fff"/>
    </view>
    <!-- 个人中心 -->
    <view class="profile icon"  bindtap="goToBar" data-title="../Mine/mine">
    <van-icon name="user-o"size="40rpx" color="#fff" />
    </view>
  </view>
</van-transition>
</view>
</view>