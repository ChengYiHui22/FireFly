/* pages/goods/goods.wxss */
.van-button {
    border-radius: 2px;
    border-radius: var(--button-border-radius,2px);
    border-radius: 0!important;
}
.goods{
  width: 100%;
  background-color: #f5f5f5; 
  position: relative; 
}
.goods-img{
    height: 750rpx;
    border-bottom: 1rpx solid #e4e4e4;
}
.goods-swiper{
    height: 750rpx;
}
.slide-image{
    width: 100%;
    height: 100%;
}
.img-index{
    position: absolute;
    right: 30rpx;
    margin-top: -70rpx;
    padding: 0 18rpx;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 50rpx;
    color: #fff;
    font-size: 32rpx;
}
.img-count{
    color: rgba(255, 255, 255, 0.6);
    font-size: 26rpx;
}
.goods-info{
    padding: 20rpx;
    background-color: #fff;
}
.goods-title{
    overflow: hidden;
    padding: 0 0rpx 0 0;
    color: #333;

}
.goods-price{
    margin-top: 10rpx;
}
.now-price{
    color: #ff495e;
    font-size: 40rpx;
    margin-top: 10rpx;
}
.old-price{
    font-size: 24rpx;
    color: #999;
    margin-left: 6rpx;
   text-decoration: line-through;

}
.goods-count{
    color: #888;
    display: flex;
    justify-content: space-between;
}
.select-goods{
    margin-top: 25rpx;
    margin-bottom: 40rpx;
    
}
.select-goods-item{
    overflow: hidden;
    margin-top: 10rpx;
}
.select-num{
    display: inline-block;
    width: 100rpx;
    height: 31px;
    line-height: 31px;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    text-align: center;
    font-size: 28rpx;
    color: #444;
    padding-bottom:2rpx ;
}

.describe{
    background-color: #fff;
}
.describe-title{
    display: flex;
    flex-wrap: wrap;
    padding: 12px;
    font-size: 31rpx;
    border-bottom: 1rpx solid #eee;
   
}


.main{
    
    position:fixed;
    bottom: 300rpx;
    right: 30rpx;
   
}
.icon{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color:rgba(0,0,0,0.4);
    text-align: center;
    line-height: 90rpx;
    margin-bottom: 20rpx;
}
.menu-classify{
    position:fixed;
    bottom: 400rpx;
    right: 30rpx;
   
}
.active{
background-color: #ff5454 !important;
}

.tap{
    position:fixed;
    bottom: 200rpx;
    right: 30rpx;
    
}
