/* pages/First/components/content/content.wxss */
.content{

   
}
.newest{
    background-color: #fff;
    margin-top: 30rpx;
}
.title{
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
 
.newest-content{
    background: #fff;
    padding: 0 12px 12px 12px;
}
.scroll-view_H{
    width: 100%;
    white-space: nowrap;

}
.shop-item{
    width: 170rpx;
    padding: 0 11rpx 11rpx 0;
    display: inline-block;
}
.item-img{
    border: 1rpx solid #f2f2f2;
    border-radius: 4px;
    overflow: hidden;
    width: 159rpx;
    height: 159rpx;
}
.item-image{
    width: 100%;
    height: 100%;
}
.item-info{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size:28rpx;
}
.item-price{
    color: #ff495e !important;
    margin-top: 10rpx;
}
.line{
    padding: 0 5%;
}
/* 猜您喜欢内容 */

.like-content-item{
    box-sizing: border-box;
    width: 50%;
    float: left;
    background-color: #fff;
    border-bottom: 6px solid #f7f7f7;

}
.like-content-item:nth-of-type(2n-1){
    border-right: 4px solid #f7f7f7;

}
.like-img{
    width: 100%;
}
.like-image{
    width: 100%;
}
.like-title{
    height: 76rpx;
    line-height: 1.3;
}
.like-price{
    font-size: 34rpx;
    font-weight:bolder;
}
.footer{
   clear: both;
   padding: 0 5%;
}