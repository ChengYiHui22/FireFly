/* pages/list/list.wxss */
.list{
    background-color: #f5f5f5;
    height: 1334rpx;
}
.search{
    top: -1rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 999;
    position: fixed;
    background: #fff;
    padding: 18rpx 13rpx;
    border-bottom: 1px solid #eee;
    display: flex;
}
.search-input{
    border-bottom: 0;
    background: #fff;
    border-radius: 50rpx;
    overflow: hidden;
    position: relative;
    font-size: 32rpx;
    color: #999;
    box-sizing: border-box;
    height: 64rpx;
    line-height: 64rpx;
    margin: 0 10rpx;
    width: 100%;
    font-size: 28rpx;
    background: #f1f1f1;

}
.vant-icon{
    margin-left: 20rpx;
    position: relative;
    top: 10rpx;
}
.classify{
    padding: 20rpx 0;
    display: flex;
    position: fixed;
    top: 103rpx;
    z-index: 10;
    background-color: #fff;
}
.classify-one{
    width: 250rpx;
    color: #333;
    font-size: 28rpx;
    text-align: center;
   
   
}
.classify-active{
    color: #ff495e !important;
}
.angular{
   position: absolute;
   top: 10rpx;
   right: 60rpx;
}
.on-price{
    display: block;
    transform-style: preserve-3d;
    transform: rotateZ(-90deg);
    position: relative;
    top: 8rpx;
    left: -2.5rpx;

}
.down-price{
    display: block;
    transform-style: preserve-3d;
    transform: rotateZ(90deg);
    position: relative;
    top: -20rpx;
    left: -2rpx;
}
.scroll-H{
    height: 520px;
    width: 375px;
    margin-top: 140rpx;
}
.items{
 width: 100%;

 
}
.list-item{
    display:inline-block ;
    width:49%;
    border-right: 2px solid #f7f7f7;
    border-bottom: 4px solid #f7f7f7;
    background-color: #fff;
}
.list-item-image{
    width: 100%;
    height: 375rpx;
    display: block
}
.list-item-info{
    padding: 0 12rpx;
}
.list-item-title{
    height: 76rpx;
    line-height: 1.3;
}

.now-price{
    color: #ff495e !important;
    font-size: 30rpx;
}
.old-price{
    text-decoration: line-through;
    padding-left: 10rpx;
    color: #999;
    font-size: 24rpx;
}
.cont{
    text-align: center;
    color: #737373;
    margin: 10px 0;
    padding: 20rpx 0;
    font-size: 30rpx;
  
    display: block;
}
.no-contnt{
    width: 200px;
    
    margin:120rpx auto;
}
.no-content-img{
    width: 100%;
    height: 120px;

}
.p{
    text-align: center;
    font-size: 30rpx;
    color: #999;
    margin-top: 20rpx;
}
