/* pages/search/search.wxss */
.search{
    width: 100%;
    background-color: #f5f5f5;
    height: 1334rpx;
}
.search-input{
    padding-left:  3%;
    height: 64rpx;
    background-color: #fff;
    border-radius: 5px;
    display: flex;
    width: 90%;
    margin:20rpx auto;
}
.input{
    width: 75%;
    height:64rpx ;
}
.search-btn{
    display: inline-block;
    width: 140rpx;
    font-size: 28rpx;
    color:#fff;
    background-color: #ff5454;
    text-align: center;
    line-height: 64rpx;
}

.recent-title{
    font-size: 10pt;
    padding: 50rpx 0 0 0;
    color: #777;
    display: flex;
    justify-content: space-between;
    padding:  3%;

}
.search-content{
    padding: 10px 0;
    overflow: hidden;
    display: inline-block;

}
.search-detail{
    width: 200rpx;
    background: #fff;
    padding: 10rpx;
    border-radius: 50px;
    justify-content: center;
    text-align: center;
    font-size: 26rpx;
    border: 1px solid #ccc;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    height: 30rpx;
    line-height: 30rpx;
    margin: 0 10rpx;
}